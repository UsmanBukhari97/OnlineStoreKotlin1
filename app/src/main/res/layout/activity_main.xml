<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#89cff0">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/login" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/email"
        android:hint="Please Enter an Email Address.."
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:id="@+id/activity_main_edtLoginEmail"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/password"
        android:hint="Please Enter Your Password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:id="@+id/activity_main_edtLoginPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="#000080"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/activity_main_btn_login"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="#d3d3d3"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:id="@+id/activity_main_btn_Signup"/>










</LinearLayout>